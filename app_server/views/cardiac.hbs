<!doctype html>

<html lang="en">
    <head>
      <title>{{title}}</title>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
        crossorigin="anonymous">

      <link href="stylesheets/style.css" rel="stylesheet">
    </head>
    
    <body id="cardiac_bg">
    
        {{> header}}

        <h1 class="mt-5 mb-5">{{this.pageName}}</h1>           

        <div id="content_cardiac" class="d-flex col-gap-3 row-gap-3 justify-content-center mt-5 mb-5">
            {{#each topics}}
                <div class="row m-5">
                <a class="nav-link" href={{this.link}}>

                    <div id="cardiac_card" class="card col g-col-3 shadow bg-body-tertiary rounded mb-3" type="button">
                        <h5 class="card-title text-center">{{this.name}}</h5>
                        <div class="card-body">
                            <img src="images/{{this.image}}" class="card-img-top"  alt=""/>
                        </div>
                    </div>

                </a>
                </div>
            {{/each}}
        </div>

    </body>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
</html>
