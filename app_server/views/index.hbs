<!doctype html>

<html lang="en">
  <head>
    <title>{{title}}</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <link href="stylesheets/style.css" rel="stylesheet">
  </head>

  <body class="bg">
    {{> header}}

    <div class="index_top_pic"></div>

    <div class="card_container">

      <div class="card_content">
        <div class="card_header">
          <h3>Topics</h3>
        </div>

        <div class="card_pic">
          <img class="pic" src="images/qrs.png">
        </div>

        {{#each topics}}
          <a href={{this.link}}>
            <h3>{{this.name}}</h3>
          </a>
        {{/each}}
      </div>

      <div class="card_content">
        <div class="card_header">
          <h3>External resources</h3>
        </div>

        <div class="card_pic">
          <img class="pic" src="images/star_of_life.png">
        </div>

        {{#each resources}}
          <a href={{this.link}} target="_blank">
            <h3>{{this.name}}</h3>
          </a>
        {{/each}}
      </div>

    </div>

