<!doctype html>

<html lang="en">
  <head>
    <title>{{title}}</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous">
    
    <link href="stylesheets/style.css" rel="stylesheet">
  </head>

  <body id="home_bg">
    {{> header}}

    <div class="welcome">
    </div>

    <div class="welcome_content">
      <h1></h1>
    </div>

    <div class="home_container">

      <div class="home_content">
        {{#each quickReference}}
            <h2><b>{{this.name}}</b></h2>
            <p><b>Blood pressure: </b>{{this.vitals.bp}}</p>
            <p><b>Heart rate: </b>{{this.vitals.hr}}</p>
            <p><b>Respiratory rate: </b>{{this.vitals.rr}}</p>
            <p><b>SpO2: </b>{{this.vitals.spo2}}</p>
            <p><b>Capnography: </b>{{this.vitals.capnography}}</p>
            <p><b>Blood glucose: </b>{{this.vitals.bgl}}</p>
            <p><b>PH: </b>{{this.vitals.ph}}</p>
        {{/each}}
      </div>

      <div class="home_content">
        <h2><b>Common Acronyms</b></h2>
        {{#each acronyms}}
          <p><b>{{this.name}}: </b>{{this.translation}}</p>
          <p>{{this.purpose}}</p>
        {{/each}}
      </div>

      <div class="home_content">
        {{#each assessment}}
          <h2><b>{{this.name}}</b></h2>
          <p>{{this.step1}}</p>
          <p>{{this.step2}}</p>
          <p>{{this.step3}}</p>
          <p>{{this.step4}}</p>         
        {{/each}}
      </div>

      <div class="home_content">
        {{#each medicationMath}}
          <h2><b>{{this.name}}</b></h2>
        
        {{/each}}
      </div>

    </div>

  </body>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous">
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
    integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
    crossorigin="anonymous">
  </script>

</html>

