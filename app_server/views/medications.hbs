<!doctype html>

<html lang="en">
    <head>
      <title>{{title}}</title>

      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">

      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous">

      <link href="../../stylesheets/style.css" rel="stylesheet">
    </head>
    
    <body id="medications_bg">
    
    {{> header}}

    <nav id="sidebar" class="navbar navbar-expand-lg bg-dark border-bottom border-body" data-bs-theme="dark">
        <div class="container-fluid">        


            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {{#each medications}}
                        <li class="nav-item d-flex">
                            <a class="nav-link" href="#{{this.name}}">{{this.name}}</a>
                        </li>
                    {{/each}}
                    <li>
                        <a class="nav-link" href="">Back to Top</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div id="content_card" class="d-flex-inline col-gap-3 row-gap-3 mt-5 mb-5">
        <h1 class="m-5">{{pageName}}</h1>

        {{#each medications}}
            <div class="row m-5" id={{this.name}}>
                <div class="card col shadow bg-body-tertiary rounded m-3">

                    <div class="card-header text-bg-secondary shadow bg-body-dark rounded mt-3">
                        <h5 class="card-title" >{{this.name}}</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{this.age}}</p>
                        <p class="card-text"><b>Dose:</b> {{{this.dose}}}</p>
                        <p class="card-text"><b>Indications:</b> {{{this.indications}}}</p>
                        <p class="card-text"><b>Contraindications:</b> {{this.contraindications}}</p>
                        <p class="card-text"><b>Side Effects:</b> {{this.sideEffects}}</p>
                        <p class="card-text"><b>Actions:</b> {{this.actions}}</p>
                        <p class="card-text"><b>Notes:</b> {{this.notes}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

